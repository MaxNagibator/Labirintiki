        var rnd = new Random();

        _myPositionX = 1;
        _myPositionY = 1;

        _originalSize = 16;
        var density = 3;

        int n = _originalSize * 2 + 1;
        lab = new int[n, n];
        _labSize = n;

        for (int i = 0; i < n; i++)
        {
            for (int j = 0; j < n; j++)
            {
                if (i == 0 || i == n - 1)
                {
                    lab[i, j] = 0;
                }

                if (j == 0 || j == n - 1)
                {
                    lab[i, j] = 0;
                }

                if (i % 2 == 1 && j % 2 == 1)
                {
                    lab[i, j] = 2;
                }

                if (i > 0 && i % 2 == 0 && i < n - 1 && j > 0 && j % 2 == 1 && j < n - 1 ||
                    i > 0 && i % 2 == 1 && i < n - 1 && j > 0 && j % 2 == 0 && j < n - 1)
                {
                    lab[i, j] = rnd.Next(0, density);
                }
            }

            lab[n - 1, n / 2] = 1;
            lab[n - 1, n / 2 - 1] = 1;
            //if (size > 1)
            //lab[1, 2] = 1;lab[2, 1] = 1;
        }

