@page "/"

<PageTitle>Дом</PageTitle>
<MudStack Spacing="3">
    <MudText Typo="Typo.h4">Добро пожаловать!</MudText>
    <MudGrid Spacing="2">
        <MudItem xs="12" md="6">
            <MudCard Elevation="0">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">(Не)забавные факты:</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    @foreach (string fact in _facts)
                    {
                        <MudAlert NoIcon="true" Severity="Severity.Info" Class="my-3">@fact</MudAlert>
                    }
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudCard Elevation="0">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">(Не)смешные шутки</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    @foreach (string joke in _jokes)
                    {
                        <MudAlert NoIcon="true" Severity="Severity.Warning" Class="my-3">@joke</MudAlert>
                    }
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudStack>
