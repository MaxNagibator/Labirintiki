@using Labirint.Web.Common.Control.Schemes
<MudText>Схемы управления:</MudText>

<MudRadioGroup @bind-Value="ControlSchemeService.CurrentScheme">
    <MudStack Spacing="0">
        @foreach (IControlScheme scheme in ControlSchemeService.AvailableSchemes)
        {
            <MudRadio Color="Color.Primary" Value="scheme">@scheme.Name</MudRadio>
        }
    </MudStack>
</MudRadioGroup>
